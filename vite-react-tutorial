            <input className="w-full rounded-md border-2 border-neutral-300 mb-3.5 focus:outline-neutral-400 px-3 placeholder-Neutral-600  caret-neutral-400 " type="name" name="firstName" id="firstName" 
            value={name} onChange={(e) => setName(e.target.value)} aria-label="First Name" placeholder="First Name" />

          <input className="w-full rounded-md border-2 border-neutral-300 mb-3.5 focus:outline-neutral-400 placeholder-Neutral-600 px-3 caret-neutral-400" type="lastname" name="lastName" id="lastName" 
          value={lastName} onChange={(e) => setLastName(e.target.value) } aria-label="last-name" placeholder="Last Name"  />

